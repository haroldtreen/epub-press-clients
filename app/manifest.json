{
  "name": "__MSG_appName__",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "vendor/chromereload.js",
      "vendor/jquery.min.js",
      "vendor/bluebird.min.js",
      "build/requestBook.js"
    ]
  },
  "permissions": [
    "pageCapture",
    "tabs",
    "topSites",
    "webRequest",
    "downloads",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Epub Press",
    "default_popup": "popup.html"
  }
}
