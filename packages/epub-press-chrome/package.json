    "homepage": "https://github.com/haroldtreen/epub-press-clients#readme",
    "dependencies": {
        "bluebird": "^3.7.2",
        "epub-press-js": "^0.5.0",
        "jquery": "^3.5.1",
        "sanitize-filename": "^1.6.1"
    },
    "devDependencies": {
        "@babel/core": "^7.10.2",
        "@babel/plugin-transform-runtime": "^7.10.1",
        "@babel/preset-env": "^7.10.2",
        "@babel/runtime": "^7.10.2",
        "babel-loader": "^8.1.0",
        "chai": "^4.2.0",
